; https://editorconfig.org/

root = true

; These are based on https://github.com/NixOS/nixfmt/blob/master/standard.md 
; Many of these are suitable for other filetypes as well

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
